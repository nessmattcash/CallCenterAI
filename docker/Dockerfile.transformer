# docker/Dockerfile.transformer
FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY src/transformer_api.py .
COPY models/enhanced_multilingual_model ./models/enhanced_multilingual_model

EXPOSE 8020

CMD ["uvicorn", "transformer_api:app", "--host", "0.0.0.0", "--port", "8020"]  # for future use